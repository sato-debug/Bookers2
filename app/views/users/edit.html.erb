<h2>User info</h2>
    <%= form_for(@user) do |f| %>
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
        <div class="field">
          <div class="field_with_errors">
            <label>Name</label>
            <%= f.text_field :name %>
          </div>
        </div>
        <div class="field">
            <label>Image</label>
            <%= f.attachment_field :profile_image %>
        </div>
        <div class="field">
          <div class="filed_with_errors">
            <label>Intoroduction</label>
            <%= f.text_area :introduction %>
          </div>
        </div>
      <% else %>
       <div class="field">
          <label for="book_title">Name</label>
          <div><%= f.text_field :name %></div>
       </div>
       <div class="field">
          <div class="field_with_errors">
            <label>Image</label>
            <%= f.attachment_field :profile_image %>
          </div>
        </div>
       <div class="field">
          <label>Introduction</label>
          <div><%= f.text_area :introduction %></div>
       </div>
      <% end %>
      <div class="actions">
        <%= f.submit 'Update User' %>
      </div>
    <% end %>