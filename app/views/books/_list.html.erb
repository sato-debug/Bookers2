<p id="notice">
 <%=  notice %>
</p>

<% if book.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>
    <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="col-xs-3">
    <h2>User info</h2>
    <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
    <table class="table">
      <thead>
        <tr>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
      </tbody>
    </table>
    <div class="row">
    <p><%= link_to "", edit_user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %></p>
    </div>

    <h2>New book</h2>
    <%= form_for(book, url:"/books#{book.id}") do |f| %>
      <% if book.errors.any? %>
        <div class="field row">
          <div class="field_with_errors">
            <label for="book_title">Title</label>
            <%= f.text_field :title,class:"col-xs-12" %>
          </div>
        </div>
        <div class="field row">
          <div class="filed_with_errors">
            <label for="book_body">body</label>
            <%= f.text_area :body,class:"col-xs-12" %>
          </div>
        </div>
      <% else %>
       <div class="field row">
          <label for="book_title">Title</label>
          <div><%= f.text_field :title, class: "book_title col-xs-12" %></div>
       </div>
       <div class="field row">
          <label for="book_body">Opinion</label>
          <div><%= f.text_area :body, class: "book_body col-xs-12"%></div>
       </div>
      <% end %>
      <div class="actions row">
        <div><%= f.submit 'Create Book',class: "btn btn-primary col-xs-12" %></div>
      </div>
    <% end %>
  </div>