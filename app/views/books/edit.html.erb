<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<h1>Editing Book</h1>
		<%= form_for(@book, url:"/books/#{@book.id}") do |f| %>
			<% if @book.errors.any? %>
			  <div id="error_explanation" class="alert alert-danger">
			    <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
			    <ul>
			      <% @book.errors.full_messages.each do |message| %>
			        <li><%= message %></li>
			      <% end %>
			    </ul>
			  </div>
				<div class="field row">
					<div class="field_with_errors">
						<label for="book_title">Title</label>
					</div>
					<div class="field_with_errors">
					<%= f.text_field :title, class: "col-xs-12" %>
					</div>
			  </div>
				<div class="field row">
					<div class="field_with_errors">
						<label for="book_body">Opinion</label>
					</div>
					<div class="field_with_errors">
					<%= f.text_area :body, class: "col-xs-12" %>
					</div>
				</div>
			<% else %>
				<div class="field row">
						<label for="book_title">Title</label>
						<div><%= f.text_field :title, class: "book_title col-xs-12" %></div>
				</div>
				<div class="field row">
						<label for="book_body">Opinion</label>
						<div><%= f.text_area :body, class: "book_body col-xs-12"%></div>
				</div>
			<% end %>
				<div class='actions row'>
					<%= f.submit 'Update Book',class: "btn btn-primary col-xs-12" %>
				</div>
		<% end %>
		<%= link_to "Show", book_path(@book.id) %>
		|
		<a class="back" href="/books">Back</a>
	</div>
</div>